<div class="abs p-4">
    <div class="card">
        <div class="card-header">
            Sign Up
        </div>
        <div class="card-body">
            <form action="/signup" method="POST" class="form">
                <div class="form-group">
                    <input type="text" name="fullname" id="fullname" required autofocus placeholder="Fullname"
                        class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="username" id="username" required autofocus placeholder="Username"
                        class="form-control">
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" required autofocus placeholder="Password"
                        class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Sign Up
                </button>
            </form>
        </div>
    </div>
</div>